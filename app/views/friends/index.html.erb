<% if user_signed_in? %>
  <h1>Friends</h1>

  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
        <tr>
          <td>
            <%= link_to friend.first_name + ' ' + friend.last_name , friend %>
            <%# <%= friend.first_name %> 
          </td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path, class: "btn btn-outline-secondary" %>

<%else%>
  <div class="container">
      <Br>
      <div class="jumbotron">
    <h1 class="display-4">BuddyTracker | App</h1>
    <p class="lead">A Simple Rails 6 |C.R.U.D| App deployed on Heroku | Users Can Sign Up and Add > Edit > Destroy Friends.</p>
    <hr class="my-4">
  </div>
  </div>
<%end%>
